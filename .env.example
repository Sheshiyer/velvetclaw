# VelvetClaw — Local Environment Configuration
# Copy to .env and fill in your values:
#   cp .env.example .env
#
# IMPORTANT: .env is gitignored — your keys stay local.

# ─── Model API Keys (at least one required) ───

OPENAI_API_KEY=
GEMINI_API_KEY=

# ─── Notification Channels (optional) ───

TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
DISCORD_WEBHOOK_URL=

# ─── Loop Runner Config ───

# Maximum agents running concurrently (default: 2)
LOOP_MAX_CONCURRENT=2

# Restrict loop to working hours only (default: false)
LOOP_WORKING_HOURS_ONLY=false
LOOP_START_HOUR=9
LOOP_END_HOUR=17

# ─── Agent Invocation ───

# Anthropic API key for claude -p agent invocation
ANTHROPIC_API_KEY=

# Default model for agent cycles (override in agent MANIFEST.yaml)
CLAUDE_MODEL=claude-sonnet-4-20250514

# ─── Safety & Monitoring ───

# Max babysitter respawns before giving up (default: 3)
MAX_RESPAWNS=3

# Daily cost alert threshold in USD (default: 10.00)
COST_ALERT_THRESHOLD=10.00

# ─── Cost Safety ───

# Daily token budget across all agents (0 = unlimited)
DAILY_TOKEN_BUDGET=0
